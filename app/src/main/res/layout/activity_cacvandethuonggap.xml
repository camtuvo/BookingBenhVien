<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context="com.hothithuhop.khambenhtructuyen.CacVanDeThuongGap.cacvandethuonggap_Activity"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:scaleType="center"
            android:layout_weight="0.4"
            android:background="#2196F3"
            android:id="@+id/img_back_cacvande"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:textColor="@color/white"
            android:background="@drawable/bg_but"
            android:textSize="19dp"
            android:textStyle="normal|bold"
            android:text="Các vấn đề thường gặp "
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="#04786E"
            />



    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        app:tabSelectedTextColor="#C51103"
        android:id="@+id/tab_layout"
        android:background="@drawable/bg_but"
        />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.1"
        android:id="@+id/view_paper"/>


    </LinearLayout>



