<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerBottom"
    android:background="@drawable/bg_dk">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="7">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="19dp"
            android:layout_weight="1.58"
            android:gravity="center"
            android:text="Mọi thông tin, điều khoản, dịch vụ và\n chính sách bảo mật của bệnh viên \nxin vui lòng kiểm tra.\n Liên hệ với bệnh viện thông qua\n hotline: 0582547177 "
            android:textColor="#3B3B51"
            android:textSize="19dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edt_taikhoan_dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="15dp"
            android:gravity="left|center"
            android:textColorHint="#454343"
            android:hint="Tài khoản"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edt_matkhau_dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="15dp"
            android:gravity="left|center"
            android:hint="Mật khẩu"
            android:textColorHint="#454343"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="88dp"
            android:background="@drawable/bg_nutdn"
            android:gravity="center"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textColor="#FBFBFB"
            android:textSize="21dp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="Quyên mật khẩu"
            android:textColor="#111212"
            android:textSize="20dp"
            android:textStyle="normal" />
    </LinearLayout>

</FrameLayout>

